@page
@model ExpenseManagement.Pages.AddExpenseModel
@{
    ViewData["Title"] = "Add Expense";
}

<div class="card">
    <h1 class="card-title mb-3">Add Expense</h1>

    <form method="post">
        <div class="form-group">
            <label class="form-label" for="amount">Amount (Â£)</label>
            <input type="number" step="0.01" min="0.01" class="form-input" id="amount" name="Amount" required />
        </div>

        <div class="form-group">
            <label class="form-label" for="date">Date</label>
            <input type="date" class="form-input" id="date" name="ExpenseDate" value="@DateTime.Today.ToString("yyyy-MM-dd")" required />
        </div>

        <div class="form-group">
            <label class="form-label" for="category">Category</label>
            <select class="form-select" id="category" name="CategoryId" required>
                @foreach (var category in Model.Categories)
                {
                    <option value="@category.CategoryId">@category.CategoryName</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label class="form-label" for="user">Employee</label>
            <select class="form-select" id="user" name="UserId" required>
                @foreach (var user in Model.Users)
                {
                    <option value="@user.UserId">@user.UserName</option>
                }
            </select>
        </div>

        <div class="form-group">
            <label class="form-label" for="description">Description</label>
            <textarea class="form-textarea" id="description" name="Description" placeholder="Enter expense description..."></textarea>
        </div>

        <div class="flex gap-2">
            <button type="submit" class="btn btn-primary">Submit Expense</button>
            <a href="/Expenses" class="btn btn-outline">Cancel</a>
        </div>
    </form>
</div>
