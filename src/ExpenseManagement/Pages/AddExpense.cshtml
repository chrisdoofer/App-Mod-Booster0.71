@page
@model ExpenseManagement.Pages.AddExpenseModel
@{
    ViewData["Title"] = "Add Expense";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0">
                    <i class="bi bi-plus-circle"></i> Add New Expense
                </h4>
            </div>
            <div class="card-body">
                @if (Model.Success)
                {
                    <div class="alert alert-success">
                        <i class="bi bi-check-circle"></i> Expense created successfully! (ID: @Model.NewExpenseId)
                        <a href="/Index" class="alert-link">View all expenses</a>
                    </div>
                }

                <form method="post">
                    <div class="mb-3">
                        <label asp-for="NewExpense.UserId" class="form-label">Employee</label>
                        <select asp-for="NewExpense.UserId" class="form-select" required>
                            <option value="">Select an employee...</option>
                            @foreach (var user in Model.Users)
                            {
                                <option value="@user.UserId">@user.UserName (@user.Email)</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NewExpense.CategoryId" class="form-label">Category</label>
                        <select asp-for="NewExpense.CategoryId" class="form-select" required>
                            <option value="">Select a category...</option>
                            @foreach (var category in Model.Categories)
                            {
                                <option value="@category.CategoryId">@category.CategoryName</option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label asp-for="NewExpense.Amount" class="form-label">Amount (Â£)</label>
                        <input asp-for="NewExpense.Amount" type="number" step="0.01" min="0.01" class="form-control" required placeholder="e.g., 25.50" />
                    </div>

                    <div class="mb-3">
                        <label asp-for="NewExpense.ExpenseDate" class="form-label">Expense Date</label>
                        <input asp-for="NewExpense.ExpenseDate" type="date" class="form-control" required />
                    </div>

                    <div class="mb-3">
                        <label asp-for="NewExpense.Description" class="form-label">Description</label>
                        <textarea asp-for="NewExpense.Description" class="form-control" rows="3" placeholder="Describe the expense..."></textarea>
                    </div>

                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a href="/Index" class="btn btn-secondary">
                            <i class="bi bi-x-circle"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> Save Expense
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
