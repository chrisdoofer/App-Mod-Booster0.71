@page
@model IndexModel
@{
    ViewData["Title"] = "Dashboard";
}

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="error-banner">
        <h3>‚ö†Ô∏è Warning</h3>
        <p><strong>@Model.ErrorMessage</strong></p>
        <p>Location: @Model.ErrorLocation</p>
        @if (!string.IsNullOrEmpty(Model.ErrorGuidance))
        {
            <p><em>@Model.ErrorGuidance</em></p>
        }
        <p style="margin-top: 10px;"><em>The application is running with dummy data for demonstration purposes.</em></p>
    </div>
}

<div class="card">
    <h2>Welcome to Expense Management System</h2>
    <p style="margin-top: 10px;">Manage your expenses efficiently with our modern cloud-native application.</p>
</div>

<div class="stats-grid">
    @foreach (var summary in Model.Summary)
    {
        <div class="stat-card">
            <h4>@summary.Count</h4>
            <p>@summary.StatusName Expenses</p>
            <p style="font-size: 1.5rem; margin-top: 10px;">¬£@summary.TotalAmount.ToString("N2")</p>
        </div>
    }
</div>

