@page
@model ExpenseManagement.Pages.ApprovalsModel
@{
    ViewData["Title"] = "Pending Approvals";
}

<h1>Pending Approvals</h1>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-warning mb-4">
        <strong>Note:</strong> @Model.ErrorMessage
    </div>
}

@if (!string.IsNullOrEmpty(Model.SuccessMessage))
{
    <div class="alert alert-success mb-4">
        @Model.SuccessMessage
    </div>
}

<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>DATE</th>
                        <th>EMPLOYEE</th>
                        <th>CATEGORY</th>
                        <th>AMOUNT</th>
                        <th>DESCRIPTION</th>
                        <th>SUBMITTED</th>
                        <th>ACTIONS</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var expense in Model.PendingExpenses)
                    {
                        <tr>
                            <td>@expense.ExpenseDate.ToString("dd MMM yyyy")</td>
                            <td>@expense.EmployeeName</td>
                            <td>@expense.CategoryName</td>
                            <td>@expense.FormattedAmount</td>
                            <td>@expense.Description</td>
                            <td>@(expense.SubmittedAt?.ToString("dd MMM yyyy HH:mm") ?? "-")</td>
                            <td>
                                <form method="post" class="d-inline">
                                    <input type="hidden" name="expenseId" value="@expense.ExpenseId" />
                                    <button type="submit" asp-page-handler="Approve" class="btn btn-sm btn-success">
                                        Approve
                                    </button>
                                    <button type="submit" asp-page-handler="Reject" class="btn btn-sm btn-danger">
                                        Reject
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                    @if (!Model.PendingExpenses.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">No pending approvals</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
