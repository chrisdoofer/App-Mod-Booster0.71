@page
@model ExpenseManagement.Pages.ExpensesModel
@{
    ViewData["Title"] = "Expenses";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Expenses</h1>
    <a asp-page="/AddExpense" class="btn btn-primary">
        + New Expense
    </a>
</div>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-warning mb-4">
        <strong>Note:</strong> @Model.ErrorMessage
    </div>
}

<!-- Filter -->
<div class="card mb-4">
    <div class="card-body">
        <form method="get" class="row g-3">
            <div class="col-md-4">
                <input type="text" class="form-control" name="filter" placeholder="Filter by description..." value="@Model.Filter" />
            </div>
            <div class="col-md-3">
                <select class="form-select" name="status">
                    <option value="">All Statuses</option>
                    <option value="Draft" selected="@(Model.StatusFilter == "Draft")">Draft</option>
                    <option value="Submitted" selected="@(Model.StatusFilter == "Submitted")">Submitted</option>
                    <option value="Approved" selected="@(Model.StatusFilter == "Approved")">Approved</option>
                    <option value="Rejected" selected="@(Model.StatusFilter == "Rejected")">Rejected</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-outline-primary">Filter</button>
            </div>
        </form>
    </div>
</div>

<!-- Expenses Table -->
<div class="card">
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover mb-0">
                <thead class="table-light">
                    <tr>
                        <th>DATE</th>
                        <th>EMPLOYEE</th>
                        <th>CATEGORY</th>
                        <th>AMOUNT</th>
                        <th>STATUS</th>
                        <th>DESCRIPTION</th>
                        <th>ACTIONS</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var expense in Model.Expenses)
                    {
                        <tr>
                            <td>@expense.ExpenseDate.ToString("dd MMM yyyy")</td>
                            <td>@expense.EmployeeName</td>
                            <td>@expense.CategoryName</td>
                            <td>@expense.FormattedAmount</td>
                            <td>
                                <span class="badge @GetStatusBadgeClass(expense.StatusName)">
                                    @expense.StatusName.ToUpper()
                                </span>
                            </td>
                            <td>@(expense.Description?.Length > 40 ? expense.Description.Substring(0, 37) + "..." : expense.Description)</td>
                            <td>
                                @if (expense.StatusName == "Draft")
                                {
                                    <form method="post" asp-page-handler="Submit" asp-route-id="@expense.ExpenseId" class="d-inline">
                                        <button type="submit" class="btn btn-sm btn-outline-primary">Submit</button>
                                    </form>
                                }
                                @if (expense.StatusName == "Draft")
                                {
                                    <form method="post" asp-page-handler="Delete" asp-route-id="@expense.ExpenseId" class="d-inline" onsubmit="return confirm('Are you sure you want to delete this expense?');">
                                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                    </form>
                                }
                            </td>
                        </tr>
                    }
                    @if (!Model.Expenses.Any())
                    {
                        <tr>
                            <td colspan="7" class="text-center text-muted py-4">No expenses found</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@functions {
    string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            "Approved" => "bg-success",
            "Submitted" => "bg-warning text-dark",
            "Draft" => "bg-secondary",
            "Rejected" => "bg-danger",
            _ => "bg-secondary"
        };
    }
}
