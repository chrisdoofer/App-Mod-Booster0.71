@page
@model ExpenseManagement.Pages.AddExpenseModel
@{
    ViewData["Title"] = "Add Expense";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0">Add New Expense</h5>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                {
                    <div class="alert alert-danger">
                        @Model.ErrorMessage
                    </div>
                }

                <form method="post">
                    <div class="mb-3">
                        <label for="Amount" class="form-label">Amount (Â£)</label>
                        <input type="number" step="0.01" min="0.01" class="form-control" id="Amount" name="Amount" 
                               value="@Model.Amount" required />
                    </div>

                    <div class="mb-3">
                        <label for="ExpenseDate" class="form-label">Date</label>
                        <input type="date" class="form-control" id="ExpenseDate" name="ExpenseDate" 
                               value="@Model.ExpenseDate.ToString("yyyy-MM-dd")" required />
                    </div>

                    <div class="mb-3">
                        <label for="CategoryId" class="form-label">Category</label>
                        <select class="form-select" id="CategoryId" name="CategoryId" required>
                            @foreach (var category in Model.Categories)
                            {
                                <option value="@category.CategoryId" selected="@(category.CategoryId == Model.CategoryId)">
                                    @category.CategoryName
                                </option>
                            }
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="Description" class="form-label">Description</label>
                        <textarea class="form-control" id="Description" name="Description" rows="3">@Model.Description</textarea>
                    </div>

                    <div class="d-flex gap-2">
                        <button type="submit" asp-page-handler="SaveDraft" class="btn btn-secondary">
                            Save as Draft
                        </button>
                        <button type="submit" asp-page-handler="Submit" class="btn btn-primary">
                            Submit for Approval
                        </button>
                        <a asp-page="/Expenses" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
