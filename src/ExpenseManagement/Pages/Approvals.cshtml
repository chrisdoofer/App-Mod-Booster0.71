@page
@model ApprovalsModel
@{
    ViewData["Title"] = "Approve Expenses";
}

<div class="card">
    <h2>✅ Approve/Reject Expenses</h2>

    @if (!string.IsNullOrEmpty(Model.SuccessMessage))
    {
        <div style="background: #d4edda; border: 1px solid #c3e6cb; padding: 15px; border-radius: 6px; margin: 20px 0; color: #155724;">
            <strong>✅ @Model.SuccessMessage</strong>
        </div>
    }

    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
    {
        <div class="error-banner">
            <h3>⚠️ Error</h3>
            <p><strong>@Model.ErrorMessage</strong></p>
        </div>
    }

    @if (Model.PendingExpenses.Any())
    {
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Employee</th>
                    <th>Description</th>
                    <th>Amount</th>
                    <th>Category</th>
                    <th>Date</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var expense in Model.PendingExpenses)
                {
                    <tr>
                        <td>@expense.ExpenseId</td>
                        <td>@expense.UserName</td>
                        <td>@expense.Description</td>
                        <td>£@expense.Amount.ToString("N2")</td>
                        <td>@expense.CategoryName</td>
                        <td>@expense.ExpenseDate.ToString("dd/MM/yyyy")</td>
                        <td>
                            <form method="post" style="display: inline;">
                                <input type="hidden" name="ExpenseId" value="@expense.ExpenseId" />
                                <input type="hidden" name="ReviewerName" value="Manager" />
                                <button type="submit" name="Approved" value="true" class="btn btn-success" style="margin-right: 5px;">✓ Approve</button>
                                <button type="submit" name="Approved" value="false" class="btn btn-danger">✗ Reject</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p style="margin-top: 20px; text-align: center; color: #6c757d;">No pending expenses to review.</p>
    }
</div>
